{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "declaration": true, // Generates .d.ts files
    "outDir": "./dist", // Output folder for compiled files
    "jsx": "react", // Enable JSX support
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
